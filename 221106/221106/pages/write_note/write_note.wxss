page {
  height: 95%;
  width: 100%;
}
.view_container {
  position: fixed;
  height: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  justify-content: center;
}

#textarea_content {
  border-width: 1rpx;
  border-color: #89969F;
  border-style: solid;
  border-radius: 10rpx;
  width: 90%;   
  height: 45%;
  margin-top: 20rpx;
  padding: 2%;
}

.input_title {
  border-width: 1rpx;
  border-color: #89969F;
  border-style: solid;
  border-radius: 10rpx;
  width: 90%;
  margin-top: 20rpx;
  padding: 2%;
}
.btn_commit{
  background-color: #8B7FF5;
  border-radius: 20rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  margin-top: 40rpx;
  text-align: center;
}